<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/movieVerticalComp_imageView"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_rect_round"
        android:contentDescription="@string/movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movieVerticalComp_innerTextView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect_round"
        android:backgroundTint="@color/transparent_black"
        android:padding="5dp"
        android:text="@string/sample_number"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/movieVerticalComp_imageView"
        app:layout_constraintStart_toStartOf="@+id/movieVerticalComp_imageView" />

    <TextView
        android:id="@+id/movieVerticalComp_titleTextView"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_movie_name"
        app:layout_constraintEnd_toEndOf="@+id/movieVerticalComp_imageView"
        app:layout_constraintStart_toStartOf="@+id/movieVerticalComp_imageView"
        app:layout_constraintTop_toBottomOf="@+id/movieVerticalComp_imageView" />

    <TextView
        android:id="@+id/movieVerticalComp_ratingTextView"
        style="@style/DescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_rating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/movieVerticalComp_titleTextView"
        app:layout_constraintStart_toStartOf="@+id/movieVerticalComp_titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/movieVerticalComp_titleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>