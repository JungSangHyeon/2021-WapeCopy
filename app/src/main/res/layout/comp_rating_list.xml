<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ratingListFragment_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_white"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ratingListFragment_dropDownImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:outlineSpotShadowColor="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

        <TextView
            android:id="@+id/ratingListFragment_filterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랜덤 영화"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/ratingListFragment_dropDownImageView"
            app:layout_constraintStart_toEndOf="@+id/ratingListFragment_dropDownImageView"
            app:layout_constraintTop_toTopOf="@+id/ratingListFragment_dropDownImageView" />

        <ImageView
            android:id="@+id/ratingListFragment_searchImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:outlineSpotShadowColor="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_search_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ratingListFragment_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingListFragment_constraintLayout"
        tools:itemCount="6"
        tools:listitem="@layout/comp_movie_rating_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>