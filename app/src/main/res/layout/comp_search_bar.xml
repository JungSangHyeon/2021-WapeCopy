<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/searchBarComp_backgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:src="@drawable/rect_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark_white" />

    <ImageView
        android:id="@+id/searchBarComp_cameraSearchImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:layout_constraintBottom_toBottomOf="@+id/searchBarComp_backgroundImageView"
        app:layout_constraintEnd_toEndOf="@+id/searchBarComp_backgroundImageView"
        app:layout_constraintTop_toTopOf="@+id/searchBarComp_backgroundImageView" />

    <ImageView
        android:id="@+id/searchBarComp_searchImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/searchBarComp_backgroundImageView"
        app:layout_constraintStart_toStartOf="@+id/searchBarComp_backgroundImageView"
        app:layout_constraintTop_toTopOf="@+id/searchBarComp_backgroundImageView" />

    <EditText
        android:id="@+id/searchBarComp_searchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="작품, 감독, 배우, 컬랙션, 유저 등"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/searchBarComp_backgroundImageView"
        app:layout_constraintEnd_toStartOf="@+id/searchBarComp_cameraSearchImageView"
        app:layout_constraintStart_toEndOf="@+id/searchBarComp_searchImageView"
        app:layout_constraintTop_toTopOf="@+id/searchBarComp_backgroundImageView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>